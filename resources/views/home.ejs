<section class="hero py-16">
  <div class="cstm_container mx-auto">
    <div class="row flex items-center justify-between">
      <div class="w-1/2">
        <h6 class="text-lg py-2">
          <em>are you hungry ?</em>
        </h6>
        <h1 class="text-6xl font-bold">Dont't wait !</h1>
        <button
          class="px-6 py-2 mt-10 rounded-full text-white font-bold mt-4 btn_primary"
        >
          order now
        </button>
      </div>
      <div class="w-1/2">
        <img src="images/pizza.png" alt="" class="mx-auto" />
      </div>
    </div>
  </div>
</section>

<section class="menu cstm_container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">All Pizza</h1>

  <div class="grid gap-x-10 gap-y-10 grid-cols-4">
    <% pizzas.forEach(function(pizza){%>
    <div class="w-64 pizza_card px-2 py-4">
      <img src="images/<%= pizza.image%>" alt="" class="h-40 mb-4 mx-auto" />
      <div class="text-center">
        <h2 class="mb-4 text-lg"><%= pizza.name%></span> 
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">₹ <%= pizza.price%> </span>
          <button data-pizza="<%= JSON.stringify(pizza)%> "
            class="add_to_cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>

   <% })%>

