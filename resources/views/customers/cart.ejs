<section class="cart py-16">
  <% if(session.cart) {%>
  <div class="order cstm_container mx-auto w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img src="images/cart-black.png" alt="" />
      <h1 class="font-bold ml-4 text-2xl uppercase">order summary</h1>
    </div>
    <div class="pizza_list">
      <% for(let pizza of Object.values(session.cart.items)){ %>
      <div class="flex items-center my-8">
        <img src="images/<%=  pizza.item.image %>" alt="" class="w-24" />
        <div class="ml-4 flex-1">
          <h2><%= pizza.item.name %></h2>
          <span><%= pizza.item.size %></span>
        </div>
        <span class="flex-1"><%= pizza.qty %></span>
        <span class="font-bold text-lg">
          â‚¹<%= pizza.item.price * pizza.qty %></span
        >
      </div>
      <% } %>
    </div>
    <hr />
    <div class="text-right py-4">
      <div>
        <span class="text-lg font-bold">Total Amount:</span>
        <span class="amount text-2xl font-bold ml-2"
          ><%= session.cart.totalPrice %></span
        >
      </div>

      <% if(user){ %>
      <div>
        <form action="/orders" class="mt-12" method="POST">
          <input
            type="text"
            class="border border-gray-400 p-2 w-1/2 mb-4"
            placeholder="Phone Number"
            name="phone"
          />
          <input
            type="text"
            class="border border-gray-400 p-2 w-1/2"
            placeholder="Address"
            name="address"
          />
          <div>
            <button
              type="submit"
              class="btn_primary px-6 py-2 rounded-full text-white font-bold mt-6"
            >
              Order Now
            </button>
          </div>
        </form>
      </div>
      <% }else{ %>
      <a
        href="/login"
        class="inline-block cursor-pointer px-6 btn_primary py-2 rounded-full text-white font-bold mt-6"
        >Login to Continue</a
      >
      <% } %>
    </div>
  </div>

  <% } else {%>

  <div class="empty_cart py-10">
    <div class="cstm_container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-10">Cart Empty ðŸ˜‡</h1>
      <p class="text-gray-500 text-lg mb-10">
        You Probably have't ordered a pizza yet.<br />
        To order a pizza , go to main page
      </p>
      <img src="images/empty-cart.png" alt="" class="w-2/5 mx-auto" />
      <a
        href="/"
        class="inline-block px-6 py-2 rounded-full btn_primary text-white font-bold mt-12"
      >
        Go back</a
      >
    </div>
  </div>
  <% }%>
</section>
